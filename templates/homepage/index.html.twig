{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    {% for team in teams %}
        {% set form = team['form'].createView %}
        {{ form_start(form)  }}
        {{ team['teamName'] }}
        {{ form_end(form) }}
    {% endfor %}
    {% if teams is empty %}
        <p>There are no teams yet. Be patient, and refresh your browser.</p>
        <button><a href="{{ path('homepage') }}">OR PRESS THIS BUTTON</a></button>
    {% endif %}

{% endblock %}
{#{'action': path('joinGroup'), 'method': 'POST'}#}
