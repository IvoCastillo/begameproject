{% extends 'base.html.twig' %}

{% block title %}RIDDLE ME THIS!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <form method="post">

        {{ question.question }} <br>
        {% for answer in question.answer %}
        <input type="radio" value="{{ answer.type }}" name="chosenAns">{{ answer.answer }} <br>

        {% endfor %}
<button name="submit" type="submit">you sure?</button>
    </form>
{% endblock %}
