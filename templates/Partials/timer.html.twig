{% if timeDiffJS is not null and timeDiffJS.invert != 1 %}
    <script>
        let s = "{{ timeDiffJS.s }}";
        let m = "{{ timeDiffJS.i }}";
        let timerDiv = document.getElementById('timer');
        function updateClock(){
            s--;
            if (s === -1){
                s = 59;
                m--;
            }
            if(s <10){
              s=`0${s}`;
            }
            if(m<10){
               m=`0${m}`;
            }
            if (s === 0 && m === 0){
                timerDiv.innerHTML = `0${m}:0${s} remaining`;
                timerDiv.innerHTML = "TIMES UP";
                clearInterval(TIMER)
            } else {
                timerDiv.innerHTML = `${m}:${s} remaining`
            }
        }
        const TIMER = setInterval(updateClock, 1000);
        timerDiv.innerHTML = `${m}:${s} remaining`
    </script>
{% endif %}
