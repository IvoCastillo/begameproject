{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <button><a href="{{ path('app_logout') }}">Logout</a></button>
        </div>
    {% endif %}

    <h1 class="title">Welcome  to Begame</h1>


    <label for="inputUsername">please, sign in</label><br>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="username" required >

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <br>
    <button class="btn" type="submit"> Sign in </button>
    <button class="btn"  > <a href="{{ path('app_register') }}"> Register here </a> </button>
</form>
{% endblock %}
